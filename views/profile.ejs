<%- include('layout', { title: 'Profile' }) %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
</head>
<body>
  <nav>
    <div class="">
        <div class="flex justify-between h-16 px-10 shadow items-center">
          <div class="flex items-center space-x-8">
            <a href="/home" class="text-gray-800 text-lg font-extrabold">Friend club</a>
        </div>
        <div class="flex space-x-4 items-center">
          <a href="/profile" class="text-gray-800 text-sm">PROFILE</a>
          <a href="/logout" class="bg-indigo-600 px-4 py-2 rounded text-white hover:bg-indigo-500 text-sm">LOGOUT</a>
          </div>
    </div>
</div>
</nav>

<main class="flex flex-col items-center">
  
  <div class="flex flex-col max-w-md p-6 dark:bg-gray-50 dark:text-gray-800 !mt-8">
    <img src="https://i.pinimg.com/564x/ae/b3/ee/aeb3ee6df79aef23899a5e6cd42dfdcd.jpg" alt="avatar" class="flex-shrink-0 object-cover h-64 rounded-sm sm:h-96 dark:bg-gray-500 aspect-square">
    <div>
      <h2 class="text-xl font-semibold"><%= user.firstname %> <%= user.lastname %></h2>
      <span class="block pb-2 text-sm dark:text-gray-600"><%= user.username %></span>
      <p>Role: 
        <% if (user.admin) { %>
          Admin
        <% } else if (user.member) { %>
          Member
        <% } else { %>
          Guest
        <% } %>
      </p>
    </div>
  </div>
  
  
    <% if (!user.member) { %>
      <a href="/join-the-club">
        <div class="!mt-8">
          <button class="w-full shadow-xl py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
            Become a member
          </button>
        </div>
      </a>
    <% } %>

    <% if (!user.admin) { %>
      <a href="/become-admin">
        <div class="!mt-8">
          <button class="w-full shadow-xl py-3 px-4 text-sm tracking-wide rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
            Try yourself in admin test!
          </button>
        </div>
      </a>
    <% } %>
</main>
</body>
</html>